@page "/Join"
@inject BeanBoost.Data.BeanBoostDbContext DbContext;
@inject NavigationManager Nav;

    <div class="mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Join Queue</h2>
            <hr/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label mt-4"></label>
            <input @bind="StudentName" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Remove the DisplayOrder input field -->

        <div class="row mt-4">
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control" @onclick="() => AddStudent()">Join</button>
            </div>
            <div class="col-6 col-md-3">
            <button class="btn btn-outline-secondary border form-control" @onclick="() => BackToQueue()">
                    Back to Queue
                </button>
            </div>
        </div>
    </div>
