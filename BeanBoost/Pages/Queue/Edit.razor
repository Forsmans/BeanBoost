@page "/Edit"
@inject BeanBoost.Data.BeanBoostDbContext DbContext;
@inject NavigationManager Nav;

<div class="mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Edit Student</h2>
        <hr />
    </div>
    <div class="form-group">
        <label class="col-form-label mt-4">Name</label>
        <input class="form-control" @bind="Program.student.Name">
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label mt-4">Times Bought</label>
        <input class="form-control" @bind="Program.student.TimesBought">
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label mt-4">Position</label>
        <input class="form-control" @bind="Program.student.Position">
        <span class="text-danger"></span>
    </div>

    <div class="row mt-4">
        <div class="col-6 col-md-3">
            <button class="btn btn-primary form-control" @onclick="Update">Update</button>
        </div>
        <div class="col-6 col-md-3">
            <button class="btn btn-outline-secondary border form-control" @onclick="Back">Back to List</button>
        </div>
    </div>



</div>
